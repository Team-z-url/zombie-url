<html>

<head>
    <meta charset="utf-8">
    <link rel="icon" type="image/png" href="./imgs/favicon.png" />
    <link rel="stylesheet" type="text/css" href="./styles/index.css" />
    <title>Z-url</title>
</head>

<body>
	{{#if user.username}}
    <h1>{{user.username}}</h1>
  {{else if user.displayName}}
    <h1>{{user.displayName}}</h1>
  {{/if}}
	<div>
    <h3>Your zombie:</h3>
    <table style="">
      <tr>
        <th>Name</th>
        <td>{{zombie.name}}</td> 
      </tr>
      <tr>
        <th>HP</th>
        <td>{{zombie.health}}</td> 
      </tr>
      <tr>
        <th>Attack</th>
        <td>{{zombie.attack}}</td> 
      </tr>
      <tr>
        <th>Defense</th>
        <td>{{zombie.defense}}</td> 
      </tr>
      <tr>
        <th>Speed</th>
        <td>{{zombie.speed}}</td> 
      </tr>
      <tr>
        <th>Since</th>
        <td>{{zombie.since}}</td> 
      </tr>
    </table>
  </div>
	{{> menu}}
</body>

	{{> footer}}

</html>